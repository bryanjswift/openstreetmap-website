<% content_for :heading do %>
  <div <% if @this_user %> id="userinformation"<% end %> >
    <% if @this_user %>
      <%= user_image @this_user %>
    <% end %>
    <h1><%= h(@title) %></h1>

    <ul class='secondary-actions clearfix'>

      <% if @this_user %>
        <%= if_user(@this_user) do %>
          <li><%= link_to image_tag("new.png", :class => "small_icon", :border=>0) + t('story.index.new'), new_story_path, {:title => t('story.index.new_title')} %></li>
        <% end %>
      <% else %>
        <%= if_logged_in do %>
          <li><%= link_to image_tag("new.png", :class => "small_icon", :border=>0) + t('story.index.new'), new_story_path, {:title => t('story.index.new_title')} %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @stories.empty? %>
  <h4><%= t 'story.index.no_stories' %></h4>
<% else %>
  <h4><%= t 'story.index.recent_stories' %></h4>

  <%= render :partial => 'story', :collection => @stories %>

  <% if @stories.size < @page_size -%>
    <%= t('story.index.older_stories') %>
  <% else -%>
    <%= link_to t('story.index.older_stories'), params.merge(:page => @page + 1 ) %>
  <% end -%>

  |

  <% if @page > 1 -%>
    <%= link_to t('story.index.newer_stories'), params.merge(:page => @page - 1) %>
  <% else -%>
    <%= t('story.index.newer_stories') %>
  <% end -%>
<% end %>
  